<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Galeria - República 804</title>
    <link rel="icon" type="image/png" href="/imagens/logo.jpeg">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="republica-body">

    <nav class="glass-nav">
        <div class="logo">
            <img src="/imagens/logo.jpeg" alt="Logo">
            <span>República 804</span>
        </div>
        <div class="nav-links">
            <a href="/">Cálculo</a>
            <a href="/galeria" class="active">Momentos</a>
            <a href="/moradoras">Moradoras</a>
            <a href="/historico">Histórico</a> 
            <a href="/estatisticas">Estatísticas</a>
        </div>
    </nav>

    <main class="container">
        <section class="photo-feed">
            <div style="margin-bottom: 30px; text-align: center;">
                <h2 class="section-title">Momentos</h2>
            </div>

            <div class="photo-grid">
                <% if (fotos.length === 0) { %>
                    <p style="text-align: center; grid-column: 1/-1; color: #888;">Nenhum momento postado ainda. Comece a subir as fotos da casa!</p>
                <% } %>

                <% fotos.forEach(foto => { %>
                    <div class="polaroid" style="position: relative;">
                        
                        <div class="admin-controls">
                            <button onclick="toggleForm('edit-galeria-<%= foto.id %>')" title="Editar">
                                <i class="fa fa-pencil"></i>
                            </button>
                            <form action="/galeria/deletar/<%= foto.id %>" method="POST" onsubmit="return confirm('Apagar esta foto da galeria?')">
                                <button type="submit" title="Excluir">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </div>

                        <div id="edit-galeria-<%= foto.id %>" class="glass-card edit-overlay-galeria" style="display: none;">
                            <form action="/galeria/editar/<%= foto.id %>" method="POST" enctype="multipart/form-data">
                                <h4 style="font-size: 0.9rem; margin-bottom: 10px;">Editar Momento</h4>
                                <input type="text" name="legenda" value="<%= foto.legenda %>" required style="width: 100%; margin-bottom: 10px; padding: 5px;">
                                <label style="font-size: 0.7rem;">Trocar foto (opcional):</label>
                                <input type="file" name="foto_galeria_edit" accept="image/*" style="font-size: 0.7rem; margin-bottom: 15px;">
                                
                                <div style="display: flex; gap: 10px;">
                                    <button type="submit" class="btn-primary" style="font-size: 0.8rem; padding: 5px 10px;">Salvar</button>
                                    <button type="button" onclick="toggleForm('edit-galeria-<%= foto.id %>')" style="font-size: 0.8rem;">Voltar</button>
                                </div>
                            </form>
                        </div>

                        <img src="<%= foto.url_foto %>" alt="<%= foto.legenda %>">
                        <p class="caption"><%= foto.legenda %></p>
                    </div>
                <% }) %>
            </div>

            <div style="margin-top: 50px; text-align: center; padding-bottom: 50px;">
                <button id="btn-show-add" onclick="toggleForm('form-add-galeria')" class="btn-primary" style="padding: 12px 25px;">
                    <i class="fa fa-camera"></i> Adicionar Nova Foto
                </button>

                <section id="form-add-galeria" class="glass-card" style="display:none; margin-top: 30px; padding: 25px; text-align: left;">
                    <h3 style="margin-bottom: 15px; color: var(--accent-color);">Postar na Galeria</h3>
                    <form action="/galeria/adicionar" method="POST" enctype="multipart/form-data">
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
                            <div style="display: flex; flex-direction: column;">
                                <label style="font-size: 0.8rem; margin-bottom: 5px;">Legenda:</label>
                                <input type="text" name="legenda" placeholder="Escreva algo sobre esse momento..." required style="padding: 10px; border-radius: 5px; border: 1px solid #ddd;">
                            </div>
                            <div style="display: flex; flex-direction: column;">
                                <label style="font-size: 0.8rem; margin-bottom: 5px;">Escolher Foto:</label>
                                <input type="file" name="foto_galeria" accept="image/*" required style="padding: 5px;">
                            </div>
                        </div>
                        <div style="margin-top: 20px;">
                            <button type="submit" class="btn-primary">Publicar Momento</button>
                            <button type="button" onclick="toggleForm('form-add-galeria')" style="background:none; border:none; cursor:pointer; margin-left:10px; color: #888;">Cancelar</button>
                        </div>
                    </form>
                </section>
            </div>
        </section>
    </main>

    <script>
        function toggleForm(id) {
            const form = document.getElementById(id);
            const btnAdd = document.getElementById('btn-show-add');

            if (form.style.display === 'none' || form.style.display === '') {
                form.style.display = 'block';
                if(id === 'form-add-galeria' && btnAdd) btnAdd.style.display = 'none';
                
                // Rola a página suavemente para o formulário
                setTimeout(() => {
                    form.scrollIntoView({ behavior: 'smooth' });
                }, 100);
            } else {
                form.style.display = 'none';
                if(id === 'form-add-galeria' && btnAdd) btnAdd.style.display = 'inline-block';
            }
        }
    </script>
</body>
</html>